<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <h1 class="mb-4">Notes </h1>
        <a href="/addnote" class="btn btn-success">New Notes</a>
        <a href="/logout" class="btn btn-danger">Logout</a>
        <%  notes.forEach(note=>{%>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title"><%=note.title %></h4>
                <div class="card-subtittle text-muted mb-2">
                    <%= note.date%>
                </div>
                <div class="card-text mb-2">
                    <%= note.data%>
                </div>
                <a href="/edit/<%=note.id%>" class="btn btn-primary">Edit</a>
                <a href="/delete/<%=note.id%>" class="btn btn-danger">delete</a>
            </div>


        </div>
        <%})%>
    </div>
</body>

</html>